# LIBDIR   = ../../../lib
# INCDIR   = ../../../include
LIBDIR   = /usr/sony/psx/lib
INCDIR   = /usr/sony/psx/include
MAKE	 = make
TADDR	 = 80010000
CC       = cc
CFLAGS   = -I -I$(INCDIR) -coff -EL -non_shared -Wx,-G 0
LDFLAGS  = -L -L$(LIBDIR) -coff -EL -non_shared -Wx,-G 0 -N -T $(TADDR) \
           -e start
RM       = rm -f
RM_CMD   = $(RM) *.CKP *.ln *.BAK *.bak *.o core errs ,* *~ *.a .emacs_* tags TAGS make.log MakeOut
DEPEND   = makedepend
LIBS     = -L$(LIBDIR) -lsnd -lspu -lgpu -lgte -letc -lc -lapi

OBJS     = main.o
all::	main
main : $(OBJS) balltex.h
	ld $(LDFLAGS) -o main $(LIBDIR)/8mbyte.o $(OBJS) $(LIBS)

for_menu : $(OBJS) 
	ld $(LDFLAGS) -o balls $(LIBDIR)/none2.o $(OBJS) $(LIBS)
	out2x balls

clean::
	$(RM) main balls *.exe
	$(RM_CMD) "#"*

depend::
	$(DEPEND) $(DEPENDFLAGS) -s "# DO NOT DELETE" -- -I$(INCDIR) -- *.c



start:
	psxbload ../simple/sample.vh 80020000
	psxbload ../simple/sample.vb 80025000
	psxbload mozart.seq 80010000
	psxexec main 807ffff0

